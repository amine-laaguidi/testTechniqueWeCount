<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/style.css">
    <title>Admin</title>
</head>
<body>
    <div class="page">
        <div class="sidebar">
            <div class="logoadm">
                <a href="">RECRUTE</a>
            </div>
            <div class="sm-logo">
                <a href="">RECRUTE</a>
            </div>
            <div class="side-list">
                <a href="index" class="side-list-item">
                    <i class="fas fa-th"></i><h4>Condidatures</h4>
                </a>
            </div>
        </div>
        <div class="centent">
            <div class="topbar">
                <a asp-controller="Candidature" asp-action="Index" class="mybtn hide">Deconnexion</a>
            </div>
            <br><br>

            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Mail</th>
                        <th>Téléphone</th>
                        <th>Etude</th>
                        <th>Expérience</th>
                        <th>Dernier employeur</th>
                        <th>Cv</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {   <tr>
                        <td>@obj.Nom</td>
                        <td>@obj.Prenom</td>
                        <td>@obj.Mail</td>
                        <td>@obj.Telephone</td>
                        <td>@obj.NiveauEtude</td>
                        <td>@obj.AnneeExperience</td>
                        <td>@obj.DernierEmployeur</td>
                            <td>
                                <a asp-controller="Download" asp-action="DownloadCv" asp-route-cvPath="@obj.CvPath">Télécharger CV</a>
                            </td>
                        <td></td>
                    </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>


</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>